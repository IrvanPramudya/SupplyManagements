@model IEnumerable<SupplyManagements.Models.Company>

@{
    ViewData["Title"] = "Index";
}

<h1>List Company</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Logo</th>
            <th>Date Registration</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
                <td align="center">
                    @if (!string.IsNullOrEmpty(item.Logo))
                    {
                        <img src="~/@item.Logo" alt="Logo @item.Name" class="img-thumbnail" style="max-width: 250px; max-height: 250px;" />
                    }
                    else
                    {
                        <span class="text-muted">No logo</span>
                    }
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a href="#" onclick="deleteItem(@item.Id)" style="color: red;">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script>
            function deleteItem(id) {
            if (confirm("Are you sure you want to delete this?")) {
                fetch(`/Company/Delete/${id}`, {
                    method: 'DELETE'
                }).then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert("Failed to delete.");
                    }
                });
            }
        }
    </script>
}
